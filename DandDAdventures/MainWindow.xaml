<Window x:Class="DandDAdventures.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DandDAdventures"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="DandD Adventures" Height="350" Width="525" SizeToContent="WidthAndHeight" Name="MyWindow">
    <DockPanel>
        
        <!-- The Main Menu -->
        <Menu DockPanel.Dock="Top">
            <Menu.Resources>
                <sys:String x:Key="File">_File</sys:String>
                <sys:String x:Key="New">_New</sys:String>
                <sys:String x:Key="Open">_Open</sys:String>
                <sys:String x:Key="Save">_Save</sys:String>
            </Menu.Resources>
            <MenuItem Header="{StaticResource File}">
                <MenuItem Header="{StaticResource New}" Click="NewFile"/>
                <MenuItem Header="{StaticResource Open}" Click="OpenFile"/>
                <MenuItem Header="{StaticResource Save}" Click="SaveFile" IsEnabled="{Binding CanSave}"/>
            </MenuItem>
        </Menu>
        
        
    </DockPanel>
</Window>
